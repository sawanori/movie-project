# App
ENV=development
DEBUG=true

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Cloudflare R2
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=movie-maker
R2_PUBLIC_URL=https://your-bucket.r2.dev

# OpenAI
OPENAI_API_KEY=sk-your-api-key

# Google Gemini
GOOGLE_API_KEY=your-google-api-key

# KlingAI (deprecated)
KLING_ACCESS_KEY=your-kling-access-key
KLING_SECRET_KEY=your-kling-secret-key

# Runway API
RUNWAY_API_KEY=your-runway-api-key

# DomoAI API
DOMOAI_API_KEY=your-domoai-api-key

# PiAPI (Kling AI via PiAPI gateway)
PIAPI_API_KEY=your-piapi-api-key
PIAPI_KLING_VERSION=2.6
PIAPI_KLING_MODE=std

# HailuoAI (MiniMax)
HAILUO_API_KEY=your-minimax-api-key-here
HAILUO_MODEL=MiniMax-Hailuo-02
HAILUO_PROMPT_OPTIMIZER=false

# BFL (Black Forest Labs) FLUX.2 API
# Get your API key from https://bfl.ai/
BFL_API_KEY=your-bfl-api-key

# Video Provider Settings
# "runway" (default), "veo", "domoai", "piapi_kling", or "hailuo"
VIDEO_PROVIDER=runway

# Topaz Video API (for 60fps frame interpolation)
# Get your API key from https://www.topazlabs.com/api
TOPAZ_API_KEY=your-topaz-api-key

# Polar (Payment)
POLAR_API_KEY=your-polar-api-key
POLAR_WEBHOOK_SECRET=your-webhook-secret

# Suno API (for BGM generation)
# Use third-party provider like SunoAPI.org since official API is not public
SUNO_API_KEY=your-suno-api-key
SUNO_API_BASE_URL=https://api.sunoapi.org

# Frontend
FRONTEND_URL=http://localhost:3000
